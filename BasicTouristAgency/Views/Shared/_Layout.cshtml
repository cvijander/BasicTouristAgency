<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BasicTouristAgency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BasicTouristAgency.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/background-images/adventure_travel_logo.jpg" alt="Adventure logo" width="100" height="80px" class="logo-img" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vacation" asp-action="Index">Show all vacations</a>
                        </li>
                    </ul>
                    @if(User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav ms-auto align-items-center">
                            <li class="nav-item">
                                <span class="nav-link text-white">Welcome, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Profile","User")">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reservation" asp-action="MyReservations">My reservations</a>
                            </li>

                            @if(User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="User" asp-action="ManageRoles">Manager roles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="User" asp-action="Index">Manage users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Reservation" asp-action="Index">Manage reservarions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Vacation" asp-action="Create">Create a vacation</a>
                                </li>
                            }


                            <li class="nav-item ms-3">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                                </form>                                
                            </li> 
                        </ul>                         
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a> 
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        </ul>
                        
                    }

                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BasicTouristAgency - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<style>
    .navbar {
        background-color: #D5BE91 !important;
    }

    .navbar a {
       color: white !important;
       font-size:14px !important;
       font-weight: 400;
       text-transform:uppercase;
       color:#3A2E26 !important;
       letter-spacing:1px;
       padding: 10px 15px;       
       transition: color 0.3s ease-in-out;
    }

    .navbar a:hover {
       color: #885A2B !important;
       text-decoration:underline;
    }

   

    .btn-outline-light {
      border-color: white;
      color: white;
      transition: all 0.3s ease-in-out;
    }

    .btn-outline-light:hover {
       background-color: white;
      color: #5A3E1B; 
    }

    .footer {
        background-color: #D5BE91 !important;
        color:#3A2E26 !important;
        text-align:center;
        padding: 15px 0;
        font-size:16px;
        font-weight:bold;
    }

    .footer a{
        color:#3A2E26 !important;
    }
</style>