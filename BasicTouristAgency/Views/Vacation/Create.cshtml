@model BasicTouristAgency.Models.Vacation


<head>
    <link rel="styleshhet" href="~/css/CreateEditDeleteVacation.css" />
    @{
        ViewData["Title"] = "Create a vacation";
    }
</head>
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div class="container mt-5">
    <div class="card p-4">
        <h2>Create a vacation</h2>   
        <form asp-action="Create" method="post" asp-controller="Vacation">

            <div class="form-group mb-3">
                <label asp-for="VacationName" class="form-label"></label>
                <input type="text" asp-for="VacationName" class="form-control" maxlength="50"  required placeholder="Enter vacation name"/>
                <span asp-validation-for="VacationName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="VacationDescription" class="form-label"></label>
                <input type="text" asp-for="VacationDescription" class="form-control" maxlength="450" required placeholder="Enter vacation description" />
                <span asp-validation-for="VacationDescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input type="date" asp-for="StartDate" class="form-control"   required />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input type="date" asp-for="EndDate" class="form-control" required />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input type="number" asp-for="Price" class="form-control" required  placeholder="Enter a price"  min="0"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" class="form-control" required asp-items="ViewBag.VacationTypes">
                    <option value=""  selected >-- select Vacation type --</option>
                   
                </select> 
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Create</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
                <a href="@Url.Action("Index","Vacation")" class="btn btn-danger">Back to vacations</a> 
            </div>

        </form>
    </div>
</div>