@model BasicTouristAgency.Models.Vacation

<head>
@{
    ViewData["Title"] = $"Delete a {Model.VacationName} - {Model.VacationId}";
}
<link rel="stylesheet" href="~/css/VacationCard.css" />

</head>

<div class="container mt-5">
    <div class="card p-4">
        <h2>Delete Vacation</h2>
        <p>Are you sure you want to delete the following vacation?</p>

        @await Html.PartialAsync("_VacationAdminCard", Model, new ViewDataDictionary(ViewData) { { "ShowVacationId", false }, { "ShowEditLink", false }, { "ShowDeleteLink", false }, { "ShowReservationLink", false } }) 

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.VacationId" />
            <div class="row">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
                <div class="col-sm-2">

                </div>
                <div class="col-sm-5">
                    <a href="@Url.Action("Index", "Vacation")" class="btn btn-secondary">Cancel</a>
                </div>
                
            </div>
           
        </form>
    </div>
</div>

