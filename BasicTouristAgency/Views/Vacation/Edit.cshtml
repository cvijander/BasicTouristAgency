@model BasicTouristAgency.Models.Vacation

<head>
    <link rel="styleshhet" href="~/css/CreateEditDeleteVacation.css" />
    @{
        ViewData["Title"] = $"Edit {Model.VacationId} {Model.VacationName}";
    }
</head>

<div class="container mt-5">
    <div class="card p-4">
        <h2>Edit Vacation</h2>
        <form asp-action="Edit" asp-controller="Vacation"  method="post">
            <input type="hidden" name="VacationId" value="@Model.VacationId" />

            <div class="form-group mb-3">
                <label asp-for="VacationName" class="form-label"></label>
                <input type="text" asp-for="VacationName" class="form-control" required />
                <span asp-validation-for="VacationName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="VacationDescription" class="form-label"></label>
                <textarea asp-for="VacationDescription" class="form-control" maxlength="450" required></textarea>
                <span asp-validation-for="VacationDescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="form-label">Start Date</label>
                <input type="date" asp-for="StartDate" class="form-control" required value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="form-label">End Date</label>
                <input type="date" asp-for="EndDate" class="form-control" required value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input type="number" asp-for="Price" class="form-control" required min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label">Type</label>
                <select asp-for="Type" class="form-select" required>
                    @foreach (var type in (List<SelectListItem>)ViewBag.VacationTypes)
                    {

                        <option value="@type.Value" selected>"@(Model.Type.ToString() == type.Value ? "selected" : null)" > @type.Text</option>                        
                        
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="@Url.Action("Index", "Vacation")" class="btn btn-danger">Cancel</a>
            </div>



        </form>
    </div>
</div>